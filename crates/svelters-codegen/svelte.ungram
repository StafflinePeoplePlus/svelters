Fragment =
  FragmentItem*

FragmentItem =
  Text
| Mustache
| Comment

Text =
  'text'

Mustache =
  '{'
  leading_: 'whitespace'?
  MustacheItem
  trailing_: 'whitespace'?
  '}'?

MustacheItem =
  ConstTag
| 'expression'

Comment =
  '<!--'
  CommentText
  '-->'?

CommentText =
  'text'

ConstTag =
  '@const'
  'whitespace'
  'expression'
