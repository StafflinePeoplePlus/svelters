Fragment =
  FragmentItem*

FragmentItem =
  Comment
| Mustache
| Text

Text =
  'text'

Comment =
  '<!--'
  CommentText
  '-->'?

CommentText =
  'text'

Mustache =
  '{'
  leading_: 'whitespace'?
  MustacheItem
  trailing_: 'whitespace'?
  '}'?

MustacheItem =
  RawMustacheTag
| DebugTag
| ConstTag
| 'expression'

DebugTag =
  '@debug'
  'whitespace'?
  identifier: 'expression'*

ConstTag =
  '@const'
  'whitespace'
  'expression'

RawMustacheTag =
  '@html'
  'whitespace'
  'expression'
